pipeline {
    agent any
    stages {
        stage('Build docker image') {
            steps {
                sh 'docker build -t Hari63106/java-app:latest .'
            }   
        }
        stage('Remove existing container') {
            steps {
                sh 'docker container rm -f app'
            }
        }
        stage('Run container') {
            steps {
                sh 'docker container run -dt --name app -P Hari63106/java-app'
            }
        }
        stage('login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push Hari63106/java-app:latest'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
